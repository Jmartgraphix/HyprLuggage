#!/bin/bash

MARKER="$HOME/.local/state/hyprluggage/first-run-done"
[[ -f "$MARKER" ]] && exit 0

# Wait for Hyprland to initialize
sleep 2

# Apply default theme
~/hyprluggage/install/themes/hyprluggage switch sakura

# Welcome notifications
notify-send -u critical "App Launcher" "Press Super + Space to launch apps"
notify-send -u critical "Keybindings" "Press Super + K to view all keybindings"
notify-send -u critical "Welcome to Hyprluggage" "Run 'hyprluggage help' for available commands."

# Mark as done (prevents re-running on future boots)
mkdir -p "$(dirname "$MARKER")"
touch "$MARKER"
